<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_mobile_navigation"
    app:startDestination="@+id/navigation_map_view">

    <fragment
        android:id="@+id/navigation_map_view"
        android:name="com.maxime.go4lunch.ui.mapview.MapViewFragment"
        android:label="@string/title_map_view"
        tools:layout="@layout/fragment_map_view" >
        <action
            android:id="@+id/action_navigation_map_view_to_restaurantDetailsFragment"
            app:destination="@id/restaurantDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_list_view"
        android:name="com.maxime.go4lunch.ui.listview.ListViewFragment"
        android:label="@string/title_list_view"
        tools:layout="@layout/fragment_list_view" >
        <action
            android:id="@+id/action_navigation_list_view_to_restaurantDetailsFragment"
            app:destination="@id/restaurantDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_workmates"
        android:name="com.maxime.go4lunch.ui.workmates.WorkmatesFragment"
        android:label="@string/title_workmates"
        tools:layout="@layout/fragment_workmates" >
        <action
            android:id="@+id/action_navigation_workmates_to_restaurantDetailsFragment"
            app:destination="@id/restaurantDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/restaurantDetailsFragment"
        android:name="com.maxime.go4lunch.ui.RestaurantDetailsFragment"
        android:label="RestaurantDetailsFragment" />


</navigation>