<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageView
        android:id="@+id/avatar_listview"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/avatar_listview" />

    <TextView
        android:id="@+id/name_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/address_listview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <TextView
        android:id="@+id/address_listview"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/schedule_listview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_listview"
        tools:text="Address" />

    <TextView
        android:id="@+id/schedule_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_listview"
        tools:text="Schedule" />

    <TextView
        android:id="@+id/range_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toStartOf="@id/avatar_listview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logo_workmate_listview"
        tools:text="100m" />

    <ImageView
        android:id="@+id/logo_workmate_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@id/one_star_listview"
        app:layout_constraintEnd_toStartOf="@id/number_of_workmate_here_listview"
        app:layout_constraintTop_toBottomOf="@id/range_listview"
        app:srcCompat="@drawable/ic_user"
        android:contentDescription="@string/logo_workmate" />

    <TextView
        android:id="@+id/number_of_workmate_here_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/avatar_listview"
        app:layout_constraintTop_toBottomOf="@id/range_listview"
        app:layout_constraintBottom_toTopOf="@id/one_star_listview"
        tools:text="(2)" />

    <ImageView
        android:id="@+id/one_star_listview"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/avatar_listview"
        app:layout_constraintTop_toBottomOf="@id/number_of_workmate_here_listview"
        app:srcCompat="@drawable/ic_star_full"
        android:contentDescription="@string/one_star_full" />

    <ImageView
        android:id="@+id/one_star_empty"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/avatar_listview"
        app:layout_constraintTop_toBottomOf="@id/number_of_workmate_here_listview"
        app:srcCompat="@drawable/ic_star_empty"
        android:contentDescription="@string/one_star_empty" />

    <ImageView
        android:id="@+id/two_star_listview"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/one_star_listview"
        app:layout_constraintTop_toBottomOf="@id/number_of_workmate_here_listview"
        app:srcCompat="@drawable/ic_star_full"
        android:contentDescription="@string/two_star_full" />

    <ImageView
        android:id="@+id/two_star_empty"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/one_star_listview"
        app:layout_constraintTop_toBottomOf="@id/number_of_workmate_here_listview"
        app:srcCompat="@drawable/ic_star_empty"
        android:contentDescription="@string/two_star_empty" />

    <ImageView
        android:id="@+id/three_star_listview"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/two_star_listview"
        app:layout_constraintTop_toBottomOf="@id/number_of_workmate_here_listview"
        app:srcCompat="@drawable/ic_star_full"
        android:contentDescription="@string/three_star_full" />

    <ImageView
        android:id="@+id/three_star_empty"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/two_star_listview"
        app:layout_constraintTop_toBottomOf="@id/number_of_workmate_here_listview"
        app:srcCompat="@drawable/ic_star_empty"
        android:contentDescription="@string/three_star_empty" />


</androidx.constraintlayout.widget.ConstraintLayout>